<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/row_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/neutralLight" />

    <TextView
        android:id="@+id/row_header"
        style="@style/regular_grey_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height_cc_option"
        android:fontFamily="?attr/fontSemiBold"
        android:gravity="center_vertical|start"
        android:paddingStart="@dimen/dashboard_nav_element_left_margin"
        android:paddingTop="@dimen/widget_margin"
        android:paddingEnd="@dimen/widget_margin"
        android:paddingBottom="@dimen/widget_margin"
        android:textColor="@color/neutralXDark"
        android:textDirection="locale" />
</LinearLayout>
